<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavalBridge.MainPage">

    <ScrollView>

        <VerticalStackLayout
        VerticalOptions="CenterAndExpand" Spacing="25">
                <Image Source="Resources/Images/chair" HeightRequest="200"></Image>
                <Label 
            Text="Welcome to Battle Seats"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Header"/>

                <Button Text="Let's Play!" Clicked="Navigate" HorizontalOptions="CenterAndExpand"></Button>
            </VerticalStackLayout>
    </ScrollView>
</ContentPage>
